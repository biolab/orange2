CompileScript: <<
	#!/bin/bash -ev
	export PATH=%b:$PATH
	ln -s %p/bin/python2.5 python
	svn export http://www.ailab.si/svn/orange/branches/ver1.0/source/
	svn export http://www.ailab.si/svn/orange/branches/ver1.0/add-ons/orngCRS/src/
	svn export http://www.ailab.si/svn/orange/branches/ver1.0/orange/
	svn export http://www.ailab.si/svn/orange/branches/ver1.0/add-ons/Genomics/
	cd source
	make
	cd ../src/
	make
	mv _orngCRS.so ..
	cd ../Genomics/
	rm -f BCMinclude.lst exclude.lst registerWidgets.py setup.py # setup_whenCombinedWithGOLib.py
	cd ../
	install_name_tool -id %p/lib/python2.5/site-packages/orange/orange.so orange.so
	install_name_tool -change ../../orange.so %p/lib/python2.5/site-packages/orange/orange.so -id %p/lib/python2.5/site-packages/orange/orangeom.so orangeom.so
	install_name_tool -change ../../orange.so %p/lib/python2.5/site-packages/orange/orange.so -id %p/lib/python2.5/site-packages/orange/corn.so corn.so
	install_name_tool -change ../../orange.so %p/lib/python2.5/site-packages/orange/orange.so -id %p/lib/python2.5/site-packages/orange/statc.so statc.so
	install_name_tool -change ../../orange.so %p/lib/python2.5/site-packages/orange/orange.so -id %p/lib/python2.5/site-packages/orange/addons/genomics/orangene.so orangene.so
	install_name_tool -id %p/lib/python2.5/site-packages/orange/_orngCRS.so _orngCRS.so
<<
InstallScript: <<
	#!/bin/bash -ev
	mkdir -p %i/share/doc/%n/
	cp orange/COPYING %i/share/doc/%n/
	mv orange/doc/reference/ %i/share/doc/%n/
	mv orange/doc/modules/ %i/share/doc/%n/
	mv orange/doc/ofb/ %i/share/doc/%n/
	mv orange/doc/datasets/ %i/share/doc/%n/
	mv orange/doc/style.css %i/share/doc/%n/
	mkdir -p %i/share/doc/orange-genomics-py25/
	cp orange/COPYING %i/share/doc/orange-genomics-py25/
	cp Genomics/doc/style.css %i/share/doc/orange-genomics-py25/
	mv Genomics/doc/modules/ %i/share/doc/orange-genomics-py25/
	mv Genomics/data/ %i/share/doc/orange-genomics-py25/
	mkdir -p %i/share/doc/orange-genomics/
	cp orange/COPYING %i/share/doc/orange-genomics/
	cp Genomics/doc/style.css %i/share/doc/orange-genomics/
	mv Genomics/doc/widgets/ %i/share/doc/orange-genomics/
	rm -rf Genomics/doc/
	mkdir -p %i/lib/python2.5/site-packages/orange/addons/genomics/
	mv orangene.so %i/lib/python2.5/site-packages/orange/addons/genomics/
	mv *.so %i/lib/python2.5/site-packages/orange/
	mv orange/orng*.py orange/mathutil.py %i/lib/python2.5/site-packages/orange/
	mv Genomics/* %i/lib/python2.5/site-packages/orange/addons/genomics/
	echo "orange" > %i/lib/python2.5/site-packages/orange.pth
	echo "orange/addons/genomics" > %i/lib/python2.5/site-packages/orange-genomics.pth
	echo "datasetsPath=\"%p/share/doc/%n/datasets/\"" > %i/lib/python2.5/site-packages/orange/orngConfiguration.py

	#!/bin/bash -ev
	
	# Compile scripts later on assume Python executable is named "python" - so we give them that
	export PATH=%b:$PATH
	ln -s %p/bin/python%type_raw[python] python
	
	# Compiles
	cd source
	make
	cd ../
	
	# Cleans
